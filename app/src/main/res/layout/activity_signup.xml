<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:id="@+id/search_layout"
    android:fillViewport="true"
    android:layout_height="match_parent"
    tools:context="akasm.bhupendramishra.com.akastock.Signup"
    android:fadeScrollbars="false"
    >

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >
        <ProgressBar

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:progressDrawable="@drawable/circular_progress_bar"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="20dp"
            />




        <ImageView
            android:id="@+id/supimageView1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_launcher"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="WELCOME"
            android:textColor="#3F51B5"
            android:textSize="22sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/supusername"
            android:inputType="text"
            android:hint="name"
            android:textCursorDrawable="@null"
            android:textColor="#3F51B5"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"

            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/supemail"
            android:inputType="text"
            android:hint="email"
            android:textCursorDrawable="@null"
            android:textColor="#3F51B5"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"

            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/suppassword"
            android:inputType="textPassword"
            android:hint="password"
            android:textCursorDrawable="@null"
            android:textColor="#3F51B5"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"

            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/supcpassword"
            android:inputType="textPassword"
            android:hint="Confirm password"
            android:textCursorDrawable="@null"
            android:textColor="#3F51B5"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"

            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/supphonenumber"
            android:inputType="text"
            android:hint="Mobile Number(10 digits)"
            android:textCursorDrawable="@null"
            android:textColor="#3F51B5"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/supinterest"
            android:inputType="text"
            android:hint="Interested in..."
            android:textCursorDrawable="@null"
            android:textColor="#3F51B5"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"

            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I agreed to terms and conditions"
            android:textColor="#3F51B5"
            android:id="@+id/remember"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Signup"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:id="@+id/suplogin"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="#ffffff"
            android:background="@drawable/allborder"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Terms and Conditions"
            android:textColor="#3F51B5"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"/>





    </LinearLayout>




</ScrollView>
